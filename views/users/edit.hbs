<form action="/users/{{user.id}}?_method=PUT" method="post" enctype="multipart/form-data">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" value="{{user.name}}" id="name">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="image">Image</label>
    <input type="file" class="form-control form-control-file" id="image" name="image">
  </div>

  <button type="submit" class="btn btn-primary">
    Submit
  </button>

</form>