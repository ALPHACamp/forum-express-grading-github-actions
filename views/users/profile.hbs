<div class="row mb-5">
  <div class="col-md-4">
      {{#if paramUser.image}}
      <img src="{{paramUser.image}}" width="300px" height="300px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{else}}
      <img src="https://via.placeholder.com/300" width="300px" height="300px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{/if}}
  </div>
  <div class="col-md-8">
    <p>Name: {{paramUser.name}}</p>
    <p>Email: {{paramUser.email}}</p>
    {{#ifCond paramUser.id user.id}}
    <a href="/users/{{paramUser.id}}/edit">
      <button class="btn btn-primary">edit</button>
    </a>
    {{/ifCond}}
  </div>
</div>