<div class="w-100 mx-auto bg-white d-flex" style="height: 380px">
  <img
    class="img-responsive center-block rounded-circle"
    src="{{user.image}}"
    style="width:35%; height:100%; transition: opacity 0.5s; opacity:0;"
    onload="this.style.opacity=1;"
  />

  <div class="ms-5 mt-3">
    <h4>{{user.name}}</h4>
    <p>{{user.email}}</p>
    <p>{{restaurants.length}} 已評論餐廳</p>
    <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
  </div>
</div>

<div class="bg-white w-100 mx-auto mt-4">
  <div class="bg-light border py-2 ps-3" style="height:50px">
    <p>{{restaurants.length}} 已評論餐廳</p>
  </div>
  <div class="d-flex flex-wrap align-items-center">
  {{#if restaurants}}
    {{#each restaurants}}
    <a href="/restaurants/{{this.id}}">
      <img
        class="img-responsive center-block rounded-circle my-3 ms-3"
        src="{{this.image}}"
        style="width:100px; height:100%; transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;"
      />
    </a>
    {{/each}}
  {{else}}
      <p class="my-3 ms-3">尚無評論餐廳</p>
  {{/if}}
  </div>

</div>