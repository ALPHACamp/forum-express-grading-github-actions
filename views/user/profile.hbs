<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <p>{{user.name}}</p>
    <p>{{user.email}}</p>
    <button href="/users/{{user.id}}/edit" class="btn btn-primary">edit</button>
  </div>
</div>