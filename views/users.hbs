<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5"
      src="{{user.image}}"
      style="width: 100%; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <h2>{{user.email}}</h2>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
  </div>
</div>
