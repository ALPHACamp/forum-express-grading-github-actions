<h1>餐廳後台</h1>
<nav class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/users">Users</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/admin/categories">Categories</a>
  </li>
</nav>
<br />

<form action="/admin/categories/{{category.id}}?_method=PUT" method="post" class="input-group">
  <div class="raw d-flex">
    <input type="text" class="form-control col-1 me-3" name="category" placeholder="Category Name"
      value="{{category.name}}">
    <button class="btn btn-warning col-3" type="submit">
      Update
    </button>
    <button type="button" class="btn btn-link col-5">
      <a class="btn btn-link link-secondary" href="/admin/categories">
        or Create NEW?
      </a>
    </button>
  </div>
</form>


<br />
<table class="table align-middle">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>