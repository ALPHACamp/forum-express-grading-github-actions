{{>tab route='category'}}
<br />
<form style="display: inline;" action=
{{#if category}}"/admin/categories/{{category.id}}?_method=PUT"
{{else}}"/admin/categories"
{{/if}}
 method="post">
<input type="text" name="name" placeholder="Please enter category" value="{{#if category}}{{category.name}}{{/if}}" required>
<button type="submit" class="btn btn-primary">
  {{#if category}} edit
  {{else}}create
  {{/if}}</button>
</form>
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
              Edit
            </a>
          </button>
          <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger" onclick="return confirm(`確定要刪除{{this.name}}嗎?`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>