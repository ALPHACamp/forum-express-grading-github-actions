{{> admin-tabs route='categories'}}
<div class="d-flex align-items-center pb-2 my-3 text-white-50 bg-purple">
  <form class="row" action="/admin/categories{{#if category}}/{{category.id}}?_method=PUT{{/if}}" method="POST" novalidate>
    <div class="col-auto">
      <input class="form-control" type="text" placeholder="Category name" name="name" value="{{category.name}}" required>
    </div>
    <div class="col-auto">
      <button class="btn {{#if category}}btn-warning{{else}}btn-success{{/if}}" type="submit">
      {{#ifCond category null}}
        Create
      </button>
      {{else}}
        Update
      </button>
      <a class="btn btn-link link-secondary" href="/admin/categories">
        or Create New
      </a>
      {{/ifCond}}
    </div>
  </form>
</div>
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
              Edit
            </a>
          </button>
          <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger" onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>